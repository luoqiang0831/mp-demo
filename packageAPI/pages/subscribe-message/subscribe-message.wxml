<import src="../../../common/head.wxml" />
<import src="../../../common/foot.wxml" />

<view class="container">
  <template is="head" data="{{title: '订阅消息'}}"/>

  <view class="page-body">
    <view class="page-section">
      <block>
        <text class="page-body-text">点击提交，调用示例订阅消息</text>
        
        <button class="page-body-button" type="primary" bindtap="getUserOpenid">获取openid</button>
        <button class="page-body-button" type="primary" bindtap="requestSubscribeMessage">订阅消息</button>
        <form  bindreset="formReset" bindsubmit="subscribeMessageSend"  report-submit="true">
          <button  form-type='submit' class="page-body-button" type="primary">发送订阅消息</button>
        </form>
      </block>
    </view>
  </view>

  <template is="foot" />
</view>
